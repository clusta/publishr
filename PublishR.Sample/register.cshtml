@{
    Layout = "_Layout.cshtml";
}

<div class="container" ng-app="register">
    <div ui-view />
</div>

<script id="Register.html" type="text/ng-template">
    <form name="reg" ng-submit="register(reg)">
        <h1 class="page-header">Register</h1>
        <div class="form-group">
            <input class="form-control" type="email" placeholder="Email" ng-model="create.email" ng-required autofocus />
        </div>
        <div class="form-group">
            <input class="form-control" type="password" placeholder="Password" ng-model="create.password" ng-required />
        </div>
        <button class="btn btn-primary" type="submit">Register</button>
    </form>
</script>

<script src="register.js"></script>