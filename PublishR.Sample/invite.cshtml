@{
    Layout = "_Layout.cshtml";
}

<div class="container" ng-app="invite">
    <div ui-view />
</div>

<script id="Invite.html" type="text/ng-template">
    <form name="inv" ng-submit="invite(inv)">
        <h1 class="page-header">Invite</h1>
        <div class="form-group">
            <input class="form-control" type="email" placeholder="Email" ng-model="create.email" ng-required autofocus />
        </div>
        <div class="form-group">
            <select class="form-control" ng-model="create.roles[0]">
                <option value="member">Member</option>
                <option value="author">Author</option>
                <option value="moderator">Moderator</option>
                <option value="editor">Editor</option>
                <option value="owner">Owner</option>
            </select>
        </div>
        <button class="btn btn-primary" type="submit">Invite</button>
    </form>
</script>

<script src="invite.js"></script>